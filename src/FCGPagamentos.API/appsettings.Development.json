{
  "ConnectionStrings": {
    "Postgres": "User ID=docker;Password=docker;Host=localhost;Port=5432;Database=fcgmicropayments;Pooling=true;"
  },
  "AzureStorage": { 
    "ConnectionString": "UseDevelopmentStorage=true",
    "UseEmulator": false
  },
  "InternalAuth": {
    "Token": "super-secret"
  },
  "ApplicationInsights": {
    "ConnectionString": ""
  },
  "OpenTelemetry": {
    "EnableConsoleExporter": false,
    "Tracing": {
      "SamplingRatio": 0.1
    }
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Information",
        "System": "Information"
      }
    },
    "Enrich": [ "FromLogContext" ],
    "WriteTo": [
      { "Name": "Console" }
    ]
  }
}
